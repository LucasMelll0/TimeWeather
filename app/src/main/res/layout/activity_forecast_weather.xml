            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/textview_weather_1_day_temp"
            app:layout_constraintEnd_toStartOf="@id/textview_weather_1_day_temp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_weather_1_day_max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Max 25ºC"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/textview_weather_1_day_temp"
            app:layout_constraintStart_toEndOf="@id/textview_weather_1_day_temp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_weather_2_day_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previsao_para_2_dias"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/textview_weather_1_day_min_temp"
            app:layout_constraintStart_toStartOf="@id/view_forecast"
            />

