            tools:text="21ºC"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/textview_weather_2_day_title"
            app:layout_constraintStart_toStartOf="@id/view_forecast"
            app:layout_constraintEnd_toEndOf="@id/view_forecast"/>

        <androidx.appcompat.widget.AppCompatTextView
