<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/gradient_main"
    android:background="@android:color/transparent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_nome_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura_cidade"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura_cidade"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_ultima_atualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizado as"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_nome_cidade"
        app:layout_constraintStart_toStartOf="@id/textview_nome_cidade"
        app:layout_constraintEnd_toEndOf="@id/textview_nome_cidade"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_clima_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clima"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/textview_temperatura_cidade"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura_cidade"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura_cidade"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="20ºC"
        android:textColor="@color/white"
        android:textSize="90sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura_minima_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min temp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_temperatura_cidade"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura_cidade"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura_maxima_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max temp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_temperatura_cidade"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura_cidade"/>

</androidx.constraintlayout.widget.ConstraintLayout>