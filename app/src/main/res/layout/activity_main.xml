<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_main">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_ultima_atualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizado as"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_local"
        app:layout_constraintStart_toStartOf="@id/textview_local"
        app:layout_constraintEnd_toEndOf="@id/textview_local"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_clima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clima"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/textview_temperatura"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="20ºC"
        android:textColor="@color/white"
        android:textSize="90sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura_minima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min temp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_temperatura"
        app:layout_constraintStart_toStartOf="@id/textview_temperatura"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_temperatura_maxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max temp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_temperatura"
        app:layout_constraintEnd_toEndOf="@id/textview_temperatura"/>

</androidx.constraintlayout.widget.ConstraintLayout>